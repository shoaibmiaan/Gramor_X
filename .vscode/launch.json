{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run: npm run dev (Next + premium watcher)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug Next.js (Inspector on 3000)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
      "args": ["dev", "-p", "3000"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "runtimeExecutable": "node",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Start (production)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm start",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Storybook",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run storybook",
      "cwd": "${workspaceFolder}"
    }
  ],
  "compounds": [
    { "name": "Launch Dev", "configurations": ["Run: npm run dev (Next + premium watcher)"] }
  ]
}
